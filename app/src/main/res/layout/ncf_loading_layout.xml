<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center">

    <LinearLayout
        android:layout_width="@dimen/ncf_loading_dialog_width"
        android:layout_height="@dimen/ncf_loading_dialog_height"
        android:layout_centerInParent="true"
        android:background="@drawable/ncf_black_corner_30px_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <ProgressBar
            style="@style/mProgress_circle"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/common_loading"
            android:layout_marginLeft="10dp"
            android:textColor="@color/main_app_text"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>